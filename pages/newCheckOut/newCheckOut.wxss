/* pages/newCheckOut/newCheckOut.wxss */
page {
  height: 100%;
  background: #f4f4f4;
}

.time-box{
  margin-bottom:20rpx;
  position: relative;
  background: white;
  height: 80rpx;
}
.time-tips{
  font-size: 20rpx;
  color:red;
}
.time-icon image{
  position:absolute;
  right: 16rpx;
  top: 14rpx;
  width: 50rpx;
  height: 50rpx;
}

.address-box {
  width: 100%;
  background: url('http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/address-bg-bd30f2bfeb.png') 0 0 repeat-x;
  background-size: 62.5rpx 10.5rpx;
  margin-bottom: 20rpx;
  padding-top: 10.5rpx;
}

.address-item {
  height:150rpx;
  background: #fff;
  padding: 20rpx 20rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
}
.address-item .sub-item{
  display: flex;
  position: relative;
  width:100%;
  overflow: hidden;
}
.sub-item .r{
  position: absolute;
  right: -5rpx;

}
.picker-wrap{
  height:80rpx;
  
}

.picker{
  position: relative;
  width:100vw;
  height: 60rpx;
  display: flex;
  align-items: center;
}
.picker .r-icon {
  position: absolute;
  right: 30rpx;
  top: 10rpx;
  width: 50rpx;
  height: 50rpx;
}
.r-icon image{
  width: 50rpx;
  height:50rpx;
}

.address-item.address-empty {
  line-height: 75rpx;
  text-align: center;
}

.address-item .l {
  width: 180rpx;
  height: 100%;
}

.address-item .l .name {
  margin-left: 6.25rpx;
  margin-top: -7.25rpx;
  display: block;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.address-item .l .default {
  margin-left: 6.25rpx;
  display: block;
  width: 62rpx;
  height: 33rpx;
  border-radius: 5rpx;
  border: 1px solid #b4282d;
  font-size: 20.5rpx;
  text-align: center;
  line-height: 29rpx;
  color: #b4282d;
}

.address-item .m {
  display: flex;
  color: #999;
  flex-direction: column;
}

.address-item .mobile {
  display: block;
  height: 35rpx;
  line-height: 35rpx;
  margin-bottom: 6.25rpx;
  font-size: 30rpx;
  color: #333;
}

.address-item .address {
  display: flex;
  height: 37.5rpx;
  font-size: 25rpx;
  color: #666;
}

.address-item .r {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.address-item .r image {
  width: 50rpx;
  height: 50rpx;
}


.coupon-box {
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
  position: relative;
}

.coupon-box .coupon-item {
  width: 100%;
  height: 108.3rpx;
  overflow: hidden;
  background: #fff;
  display: flex;
  padding-left: 31.25rpx;
}

.coupon-box .l {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  width: 200rpx;
}

.coupon-box .l .name {
  font-size: 30rpx;
  color: #666;
  height: 100rpx;
  line-height: 100rpx;
  width: 200rpx;
}

.coupon-box .l .txt {
   height: 100rpx;
   width: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #666;
}

.coupon-box .r {
  margin-top: 15.5rpx;
  width: 77rpx;
  height: 77rpx;
  position: absolute;
  right: -5rpx;
  top:15rpx;
}

.coupon-box .r image {
  width: 52.078rpx;
  height: 52.078rpx;
}

.message-box {
  margin-top: 20rpx;
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
}

.message-box .message-item {
  height: 52.078rpx;
  overflow: hidden;
  background: #fff;
  display: flex;
  margin-left: 31.25rpx;
  padding-right: 31.25rpx;
  padding-top: 5rpx;
  line-height: 52.078rpx;
}

.order-total {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  display: flex;
}

.order-total .l {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  color: #b4282d;
  background: #fff;
  font-size: 33rpx;
  padding-left: 31.25rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.2);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
}

.order-total .r {
  width: 233rpx;
  height: 100rpx;
  background: #b4282d;
  border: 1px solid #b4282d;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}
