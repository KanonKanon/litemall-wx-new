/* pages/ucenter/records/xiaoshoudanrecord/xiaoshowdanrecord.wxss */
.no-data {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 800rpx;
}

.no-data view {
  margin-bottom: 80rpx;
}

.no-data view image {
  width: 200rpx;
  height: 200rpx;
}
.d-wrap{
  padding: 20rpx 20rpx;
  border:1rpx solid grey;
  border-radius: 20rpx;
  position: relative;
}

.canvas-wrap{
  display: flex;
  justify-content: center;
}

.txtCode {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
  overflow: hidden;
}

.txtCode .t-wrap .t-close {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  z-index: 110;
  background: whitesmoke;
  border-radius: 50%;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  color: grey;
}

.t-wrap {
  position: fixed;
  top: 60rpx;
  left: 25rpx;
  width: 700rpx;
  height: 1100rpx;
  background: white;
  padding: 50rpx 0rpx 0 0rpx;
}
.wx-canvas{
  margin: 0 auto;
}


.t-wrap .t-btn {
  display: flex;
  background: red;
  color: white;
  width: 80%;
  position: absolute;
  bottom: 20rpx;
  left: 65rpx;
  justify-content: center;
  align-items: center;
}
.show-btn{
  position: absolute;
  right:20rpx;
  bottom: 10rpx;
}
.title-wrap{
  width:100%;
}
.title-wrap .title{
  overflow: visible;
  width:400rpx;
}