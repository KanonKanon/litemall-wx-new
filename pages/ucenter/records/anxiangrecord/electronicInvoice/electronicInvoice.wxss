/* pages/ucenter/records/anxiangrecord/electronicInvoice/electronicInvoice.wxss */

.main-wrap {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.main-wrap image {
  transform: rotate(90deg) scale(1.5, 1.5);
}

.no-pic {
  display: flex;
  justify-content: center;
  align-items: center;
}

.no-pic text {
  font-size: 40rpx;
  color: red;
}

@media screen and (max-width:350px) {
  .main-wrap image {
    transform: rotate(90deg) scale(1.3, 1.3);
  }
}

@media screen and (min-width:350px) and (max-width:400px) {
  .main-wrap image {
    transform: rotate(90deg) scale(1.5, 1.5);
  }
}

@media screen and (min-width:400px) {
  .main-wrap image {
    transform: rotate(90deg) scale(1.7, 1.7);
  }
}
