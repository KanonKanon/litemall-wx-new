page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.container {
  background: #f4f4f4;
  height: auto;
  overflow: hidden;
  width: 100%;
}

.profile-info {
  background-color: #ab956d;
  color: #f4f4f4;
  display: flex;
  align-items: center;
  padding: 30rpx;
  font-size: 28rpx;
}

.profile-info .avatar {
  height: 148rpx;
  width: 148rpx;
  border-radius: 50%;
}

.profile-info .info {
  display: flex;
  height: 120rpx;
  padding-left: 31.25rpx;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.profile-info .name {
  display: block;
  height: 45rpx;
  line-height: 45rpx;
  color: #fff;
  font-size: 37.5rpx;
  margin-bottom: 10rpx;
}

.profile-info .level {
  display: block;
  color: white;
  font-size: 22rpx;
  border:6rpx solid white;
  background:skyblue;
  border-radius: 20rpx;
  width: 180rpx;
  padding: 8rpx 4rpx;
  text-align: center;
}

.user_area {
  /* border: 1px solid black; */
  width: 100%;
  height: 226rpx;
  /* margin: 0 auto; */
  background: #fff;
  /* border-top: 1px solid #f4f4f4; */
}

.user_row {
  /* border: 1px solid black; */
  height: 86rpx;
  line-height: 86rpx;
  border-bottom: 1rpx solid #cdcdcd;
  background: white;
  overflow: hidden;
}

.user_row_left {
  /* border: 1px solid #757575; */
  float: left;
  height: 86rpx;
  font-weight: 550;
  line-height: 86rpx;
  margin-left: 35rpx;
  font-size: 26rpx;
  letter-spacing: 1rpx;
  
}

.user_row_right {
  /* border: 1px solid #757575; */
  float: right;
  height: 86rpx;
  width: 40rpx;
  font-weight: 550;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right:20rpx; 
}
.user_row_right image{
  width: 40rpx;
  height:40rpx;
}

.user_column {
  /* border: 1px solid black; */
  height: 140rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: white;
}

.user_column_item {
  width: 30%;
  height: 140rpx;
  background: #fff;
  text-align: center;
  position: relative;
}

.user_column_item_badge {
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  background: #b4282d;
  color: #fff;
  border-radius: 50%;
  margin-top: 20rpx;
  margin-left: 40rpx;
  text-align: center;
  line-height: 40rpx;
}

.user_column_item_image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 20rpx;
}

.bigger-image {
  width: 60rpx;
  height: 60rpx;
}

.user_column_item_text {
  /* border: 1px solid black; */
  margin-top: 5rpx;
  font-size: 24rpx;
  color: #555;
}

.separate {
  background: gainsboro;
  width: 100%;
  height: 20rpx;
}

.viewNumber .bind-card {
  display: flex;
  min-height: 100rpx;
  background-color: white;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 30rpx;
  color: white;
  
}
.viewNumber .no-bind-card{
  color: red;
  font-size: 30rpx;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  background-color: white;
}
.image-eye {
  width: 50rpx;
  height: 100rpx;
}

.image-eye image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 30rpx;
}

.viewNumber .bind-card view {
  margin: auto;
}

.user_column_item_phone {
  width: 30%;
  height: 100%;
  background: #fff;
  text-align: center;
  position: relative;
}

.user_column_item_phone image {
}

.user_column_item_text_phone {
  position: absolute;
  bottom: 12rpx;
  font-size: 24rpx;
  color: #555;
}

.user_column_item_card {
  width: 30%;
  height: 100%;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  float: left;
  background: #fff;
  border-bottom: 1px solid #fafafa;
  position: relative;
}

.user_column_item_card image {
  position: relative;
  width: 40%;
  height: 40%;
}

.user_column_item_text_card {
  font-size: 24rpx;
  width: 100%;
  height: 40%;
  color: #555;
  position: relative;
  bottom: 4rpx;
}

.user_column_item_phone::after {
  border: none;
}

.logout {
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  text-align: center;
  background: #fff;
  font-size: 30rpx;
}

.distributor{
  display: flex;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  background: white;
}

.line{
  height:2rpx;
  background:gainsboro;
}


.become-member{
  background: rgba(0, 0, 0, 0.5);
  width:100%;
  height: 100%;
  position: fixed;
  top:0;
  left: 0;
  right: 0;
  bottom: 0;
}

.become-member .b-panel{
  background: white;
  width: 500rpx;
  height: 300rpx;
  position: absolute;
  top:50%;
  transform: translate(25%,-50%);
  border-radius: 20rpx;
  padding: 20rpx 20rpx;
}

.b-panel .desc{
  margin: 10rpx 0;
}
.b-panel .b-title{
  font-weight: bold;
}
.b-panel view input{
  border: 1rpx solid gray;
  width: 80%;
  height: 60rpx;
  text-indent: 20rpx;
  border-radius: 5rpx;
}
.b-panel button{
  width: 250rpx;
  height: 80rpx;
  margin-top: 30rpx;
  line-height: 80rpx;
  font-size: 25rpx;
  text-align: center;
}

.logo {
  height: 250rpx;
  background: gainsboro;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.logo view image {
  width: 250rpx;
  height: 80rpx;
}
