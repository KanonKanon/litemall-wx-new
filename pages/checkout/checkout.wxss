.page {
  height: 100%;
  background: #f4f4f4;
}

.line-s {
  height: 20rpx;
}

.time-box {
  margin-bottom: 20rpx;
  position: relative;
}

.time-tips {
  font-size: 20rpx;
  color: red;
}

.time-icon {
  position: absolute;
  right: 18rpx;
  top: 0rpx;
  width: 50rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.time-icon image {
  width: 50rpx;
  height: 50rpx;
}

.address-box {
  width: 100%;
  background: url('http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/address-bg-bd30f2bfeb.png') 0 0 repeat-x;
  background-size: 62.5rpx 10.5rpx;
  margin-bottom: 20rpx;
  padding-top: 10.5rpx;
}

.address-item {
  height: 160rpx;
  background: #fff;
  padding: 20rpx 20rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  position: relative;
}

.address-item .sub-item {
  display: flex;
  position: relative;
  width: 100%;
  overflow: hidden;
}

.sub-item .r {
  position: absolute;
  right: 0rpx !important;
}

.picker-wrap {
  height: 80rpx;
}

.picker {
  position: relative;
  width: 100vw;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.picker .r-icon {
  position: absolute;
  right: 30rpx;
  top: 10rpx;
  width: 50rpx;
  height: 50rpx;
}

.r-icon image {
  width: 50rpx;
  height: 50rpx;
}

.address-item.address-empty {
  line-height: 75rpx;
  text-align: center;
}

.address-item .l {
  width: 150rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}

.address-item .l .name {
  margin-left: 10rpx;
  display: block;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.address-item .l .default {
  display: block;
  width: 62rpx;
  height: 33rpx;
  border-radius: 5rpx;
  border: 1px solid #b4282d;
  font-size: 20.5rpx;
  text-align: center;
  line-height: 29rpx;
  color: #b4282d;
}

.address-item .m {
  display: flex;
  height: 160rpx;
  color: #999;
  flex-direction: column;
  justify-content: center;
}

.address-item .mobile {
  display: flex;
  height: 35rpx;
  line-height: 35rpx;
  margin-bottom: 6.25rpx;
  font-size: 30rpx;
  color: #333;
  text-align: left;
}

.address-item .address {
  display: flex;
  font-size: 25rpx;
  color: #666;
  overflow: hidden;
}

.address-item .r {
  width: 50rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 20rpx;
}

.address-item .r image {
  width: 50rpx;
  height: 50rpx;
}

.coupon-box {
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
  position: relative;
  display: flex;
  align-content: center;
}

.coupon-box .coupon-item {
  width: 100%;
  height: 108.3rpx;
  overflow: hidden;
  background: #fff;
  display: flex;
  padding-left: 31.25rpx;
}

.coupon-box .l {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  width: 300rpx;
}

.coupon-box .l .name {
  font-size: 30rpx;
  color: #666;
  height: 100rpx;
  line-height: 100rpx;
  width: 200rpx;
}

.coupon-box .l .txt {
  height: 100rpx;
  width: 200rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #666;
}

.coupon-box .r {
  width: 50rpx;
  height: 100%;
  position: absolute;
  right: 18rpx;
  top: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.coupon-box .r image {
  width: 50rpx;
  height: 50rpx;
}

.message-box {
  margin-top: 20rpx;
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
}

.message-box .message-item {
  height: 52.078rpx;
  overflow: hidden;
  background: #fff;
  display: flex;
  margin-left: 31.25rpx;
  padding-right: 31.25rpx;
  padding-top: 5rpx;
  line-height: 52.078rpx;
}

.order-box {
  margin-top: 20rpx;
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
}

.order-box .order-item {
  height: 104.3rpx;
  overflow: hidden;
  background: #fff;
  display: flex;
  margin-left: 31.25rpx;
  padding-right: 31.25rpx;
  padding-top: 26rpx;
  border-bottom: 1px solid #d9d9d9;
}

.order-box .order-item .l {
  float: left;
  height: 52rpx;
  width: 50%;
  line-height: 52rpx;
  overflow: hidden;
}

.order-box .order-item .r {
  float: right;
  text-align: right;
  width: 50%;
  height: 52rpx;
  line-height: 52rpx;
  overflow: hidden;
}

.order-box .order-item.no-border {
  border-bottom: none;
}

.goods-items {
  margin-top: 20rpx;
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
  padding-left: 31.25rpx;
  margin-bottom: 120rpx;
}

.goods-items .item {
  height: 192rpx;
  padding-right: 31.25rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(0, 0, 0, 0.15);
}

.goods-items .item.no-border {
  border-bottom: none;
}

.goods-items .item:last-child {
  border-bottom: none;
}

.goods-items .img {
  height: 145.83rpx;
  width: 145.83rpx;
  background-color: #f4f4f4;
  margin-right: 20rpx;
}

.goods-items .img image {
  height: 145.83rpx;
  width: 145.83rpx;
}

.goods-items .info {
  flex: 1;
  height: 145.83rpx;
  padding-top: 5rpx;
}

.goods-items .t {
  height: 33rpx;
  line-height: 33rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  font-size: 30rpx;
  color: #333;
}

.goods-items .t .name {
  display: block;
  float: left;
}

.goods-items .t .number {
  display: block;
  float: right;
  text-align: right;
}

.goods-items .m {
  height: 29rpx;
  overflow: hidden;
  line-height: 29rpx;
  margin-bottom: 25rpx;
  font-size: 25rpx;
  color: #666;
}

.goods-items .b {
  height: 41rpx;
  overflow: hidden;
  line-height: 41rpx;
  font-size: 30rpx;
  color: #333;
}

.order-total {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  display: flex;
}

.order-total .l {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  color: #b4282d;
  background: #fff;
  font-size: 33rpx;
  padding-left: 31.25rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.2);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
}

.order-total .r {
  width: 233rpx;
  height: 100rpx;
  background: #b4282d;
  border: 1px solid #b4282d;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}


