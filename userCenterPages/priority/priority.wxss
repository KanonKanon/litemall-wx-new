/* pages/priority/priority.wxss */
.top{
margin-bottom: 40rpx;
padding: 20rpx 0;
display: flex;
min-height: 40rpx;
background-color: #861115;
justify-content: center;
align-items: center;
text-align: center;
font-size: 30rpx;
color:white;
}

.loginBtn{
  width: 700rpx;
  height: 70rpx;
  color:white;
  background-color:#861115;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 42rpx;
  display: flex;
  margin-top: 50rpx;
}
.row{
  height: 120rpx;
  margin: 20rpx auto;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: row;
  padding: 0 150rpx;
}
.row button{
  width: 180rpx;
  height: 70rpx;
  background-color:white;
  font-size: 30rpx;
  display: flex;
  margin: auto;
  text-align: center;
  align-items: center;
  justify-content: center;
}
.itemColumn{
  text-align: center;
  align-items: center;
  height: 90rpx;
  background-color: #FFFFFF;
  display: flex;
  flex:row; 
  padding-left: 20rpx;
}
.itemColumn text{
  color:red;
  margin-left: 20rpx;
}
.des{
  background-color: #FFFFFF;
  height: 160rpx;
  padding: 20rpx;
  display: flex;
  flex: row;
  font-size: 25rpx;
}
.des view{
  margin: auto;
}
.des text{
  color: red;
  font-size: 35rpx;
}


