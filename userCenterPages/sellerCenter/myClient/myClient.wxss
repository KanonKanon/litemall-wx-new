/* userCenterPages/sellerCenter/myClient/myClient.wxss */

.line {
  width: 100%;
  height: 1rpx;
  background: whitesmoke;
}

.line-b {
  width: 100%;
  height: 2rpx;
  background: whitesmoke;
}

.line-s {
  width: 100%;
  height: 20rpx;
  background: whitesmoke;
}

.main-wrap {
  background: whitesmoke;
  width: 100%;
  height: 1334rpx;
}

.top-bar {
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  height: 80rpx;
  align-items: center;
  background: white;
}

.top-bar view {
  width: 150rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.active {
  border-bottom: 8rpx solid red;
  font-weight: bold;
}

.top {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 100rpx;
  background: white;
}

.top .yesterday, .sevendays, .all {
  display: flex;
  align-items: center;
  border-radius: 50rpx;
  padding: 0 20rpx;
  height: 60rpx;
  background: gainsboro;
  color: gray;
  margin-left: 30rpx;
}

.top .active {
  border: 2rpx solid red;
  color: red;
  background: lightpink;
}

.no-data {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 800rpx;
}

.no-data view {
  margin-bottom: 80rpx;
}

.no-data view image {
  width: 200rpx;
  height: 200rpx;
}

.btn-list {
  position: fixed;
  bottom: -18rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 120rpx;
  background: whitesmoke;
}

.btn-list .btn-l {
  display: flex;
  height: 100rpx;
  border: 1rpx solid grey;
  width: 33.3%;
  justify-content: center;
  align-items: center;
}

.btn-list .btn-c {
  display: flex;
  height: 100rpx;
  border-top: 1rpx solid grey;
  border-bottom: 1rpx solid grey;
  color: #333;
  width: 33.3%;
  justify-content: center;
  align-items: center;
}

.btn-list .btn-r {
  display: flex;
  height: 100rpx;
  border: 1rpx solid grey;
  width: 33.3%;
  justify-content: center;
  align-items: center;
}

.data-item {
 height: 100rpx;
 background: white;
 overflow: hidden;
 padding: 10rpx 30rpx;
 border-bottom: 2rpx solid whitesmoke;
}

.data-item .d-left {
 float: left;
 width: 45%;
  
}

.data-item .d-left view {
 
}

.data-item .d-right {
 float:left;
 width: 45%;
  
}

.data-item .d-right view{
  text-align: right;
}
.data-item .d-right view:nth-child(2){
  color: red;
}

.data-item .d-icon {
  float:right;
  width: 10%;
  height: 100rpx;
  line-height: 100rpx;
  padding:5rpx 0 0 20rpx; 
}
