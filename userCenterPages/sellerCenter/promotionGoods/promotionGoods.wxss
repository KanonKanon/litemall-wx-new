.line-b{
  height: 2rpx;
  background: gainsboro;
}
.label-list{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding: 0 20rpx;
  height: 100rpx;
}
.l-item{
  width: 120rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.label-list .active{
  border-bottom: 8rpx solid red;
}

.goods-list{
  margin-bottom: 100rpx;
}
.g-item{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx 20rpx;
  border-bottom: 2rpx solid gainsboro;
}

.g-item .g-left{
  width: 200rpx;
  height: 200rpx;
}
.g-item .g-left image{
  width: 200rpx;
  height: 200rpx;
}
.g-item .g-right{
  display: flex;
  flex-direction: column;
  align-content: space-between;
  height: 200rpx;
  margin-left: 20rpx;
}
.g-right .g-name{
  font-size: 30rpx;
}
.g-item .g-right .g-desc{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 60rpx;
  margin-top: 100rpx;
}
.g-desc .g-d-left{
  color: grey;
}
.g-desc .g-d-middle{
  color: grey;
  margin: 0 10rpx;
}
.g-desc .g-d-money{
  font-size: 30rpx;
  color: red;
}


.btn-list {
  position: fixed;
  bottom: -18rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 120rpx;
  background: whitesmoke;
}

.btn-list .btn-l {
  display: flex;
  height: 100rpx;
  border: 1rpx solid grey;
  width: 33.3%;
  justify-content: center;
  align-items: center;
}

.btn-list .btn-c {
  display: flex;
  height: 100rpx;
  border-top: 1rpx solid grey;
  border-bottom: 1rpx solid grey;
  color: #333;
  width: 33.3%;
  justify-content: center;
  align-items: center;
}

.btn-list .btn-r {
  display: flex;
  height: 100rpx;
  border: 1rpx solid grey;
  width: 33.3%;
  justify-content: center;
  align-items: center;
}


.no-data{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 800rpx;

}
.no-data view{
  margin-bottom: 80rpx;
}
.no-data view image{
  width:200rpx;
  height: 200rpx;
}

