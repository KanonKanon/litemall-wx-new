.sex-wrap, .birth-wrap {
  position: relative;
  display: flex;
  align-items: center;
  overflow: hidden;
}

.sex-wrap {
  position: relative;
  width: 100%;
}

.sex {
  position: absolute;
  top: 200rpx;
  left: 200rpx;
  height: 50rpx;
}
.sex .btn{
  height: 48rpx;
  width: 48rpx;
  background:lightblue;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.birth-picker {
  position: absolute;
  top: 20rpx;
  left: 195rpx;
}

.scan-btn {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: lightblue;
  color: white;
}

.addr-wrap {
  position: relative;
}

.text-wrap {
  position: absolute;
  width: 100%;
  height: 100rpx;
  left: 212rpx;
  top: 485rpx;
  overflow: hidden;
}

.text-a {
  height: 88rpx;
  width: 490rpx;
}
.t-con{
  height: 80rpx;
}

