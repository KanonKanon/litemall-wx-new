  .sex {
    position: absolute;
    top: 231rpx;
    left: 247rpx;
    height: 50rpx;
  }

  .birth-picker {
    position: absolute;
    top: 20rpx;
    left: 250rpx;
  }

  .text-wrap {
    position: absolute;
