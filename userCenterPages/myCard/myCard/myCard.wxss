/* pages/myCard/myCard.wxss */
.top{
padding: 20rpx 0;
display: flex;
min-height: 40rpx;
background-color: #ab956d;
justify-content: center;
align-items: center;
text-align: center;
font-size: 30rpx;
color:white;
}
.top text{
  color:white;
}


.listRow{
  display: flex;
  flex-direction: row;
  margin: 0 40rpx;
  border-bottom:  1rpx solid #ccc;
  width: 90%;
}
.listRow view{
  color:black;
  display: float;
  font-size: 32rpx;
  margin:10rpx 10rpx;
}
.reward{
  display: flex;
  flex-direction: row;
  margin: 20rpx auto;
}

.reward view{
  margin-left:70rpx;
}
.phone{
  display: flex;
}
.phone view{
  margin-left:70rpx;
}

.listView{
  margin-top: 20rpx;
}
.background{
  background: url("http://www.bingold.cn:8008/starshinecenter/images/weixin/card.jpg");
  background-size: 100% 100%;
  width:650rpx;
  height:398rpx;
  margin:  15rpx auto;
}
.background view{
  color: white;
  text-align: center;
  position: relative;
  top: 330rpx;
  font-size: 40rpx;
}
.image-eye {
  width: 50rpx;
  height: 100rpx;
  position: absolute;
  right: 30rpx;
  bottom: 0rpx;
  display: flex;
  align-items: center;
}

.image-eye image {
  width: 50rpx;
  height: 50rpx;
}
.desc-wrap{
  margin-bottom: 40rpx;
  position: relative;
  overflow: hidden;
}


