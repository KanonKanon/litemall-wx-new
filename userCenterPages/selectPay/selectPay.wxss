/* userCenterPages/selectPay/selectPay.wxss */
.main-container{
  width: 100%;
  height: 100%;
}
.title{
  text-align: center;
  background: #ab956d;
  color: white;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.select-item{
  padding-left:260rpx;
  margin-bottom: 20rpx;
  
}
.group{
  margin: 40rpx 20rpx;
}
.group button{
  font-size: 30rpx;
}

.popupWin{
  width: 100%;
  height: 100%;
  background: rgba(220, 220, 220, 0.8);
  position: absolute;
  top: 0;
  left: 0;
}
.panel{
  width: 500rpx;
  margin: 200rpx auto;
  background: white;
}
.panel view{
  text-align: center;
  position: relative;
  top: 40rpx
}
.panel input{
  margin: 100rpx auto;
  width: 400rpx;
  height: 100rpx;
  border:1rpx solid black;
  font-size: 50rpx;
  padding-left: 20rpx;
}
.panel button{
  border-radius: 0;
}
.row{
  display: flex;
  justify-content: flex-start;
}
.row-txt{
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.pay-money{
  display: flex;
  justify-content: center;
  flex-direction: column;
  height: 300rpx;
}
.pay-money .price{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;

}
.pay-money .txt{
  display:  flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}

