/* lib/popup/popup.wxss */

.wx-popup {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 80%;
  max-width: 600rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%);
  overflow: hidden;
  background: #fff;
}

.wx-popup-title {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  font-size: 30rpx;
  border-bottom: 2rpx solid grey;
}

.wx-popup-con {
  margin: 60rpx 10rpx;
  text-align: center;
  font-size: 30rpx;
}

.eye-image {
  position: absolute;
  right: 20rpx;
  top: 14rpx;
}

.eye-image image {
  width: 50rpx;
  height: 50rpx;
}

.wx-popup-btn {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.wx-popup-btn button {
  font-size: 30rpx;
}

.wx-popup-btn text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30%;
  height: 88rpx;
  border: 2rpx solid #ccc;
  border-radius: 88rpx;
}

.input-area {
  position: relative;
}

.p-style {
  font-size: 200rpx;
}

.text text {
  position: absolute;
  text-align: left;
  font-size: 60rpx;
  left: 52rpx;
  top: 23rpx;
  letter-spacing: 57rpx;
}

.input-box {
  height: 100rpx;
  width: 0;
  text-align: left;
  margin-left: 30rpx;
  opacity: 0;
  z-index: -999;
  outline: none;
  border: none;
  color: transparent;
}

.dot-list {
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 45rpx;
  top: 30rpx;
}

.dot {
  background: black;
  border-radius: 50%;
  width: 50rpx;
  height: 50rpx;
  margin-right: 40rpx;
}

.box-list {
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 30rpx;
  top: 15rpx;
}

.box {
  width: 80rpx;
  height: 80rpx;
  border: 1rpx solid black;
  margin-right: 11rpx;
}
